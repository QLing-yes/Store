._header {
  display: flex;
}
.sticky {
  top: 0px;
  bottom: 0px;
  left: 0px;
  right: 0px;
  position: -webkit-sticky !important;
  position: sticky !important;
  z-index: 99;
}
.flex {
  display: flex;
}
.swiper {
  height: 434rpx;
}
.swiper .item {
  display: flex;
  flex-direction: row;
  padding-right: 30rpx;
}
.swiper .item .scroll_content {
  display: flex;
  flex-direction: row;
  white-space: nowrap;
}
.t {
  font-weight: 600;
  font-size: 35rpx;
  margin: 30rpx;
  margin-left: 0rpx;
}
.t_margin {
  margin: 30rpx;
  margin-left: 0rpx;
}
.list {
  margin: 30rpx;
  margin-top: 0rpx;
  display: flex;
  flex-direction: column;
}
.card4 {
  margin-bottom: 16rpx;
}
.card4 > view {
  margin-bottom: 16rpx;
}
.discover {
  display: flex;
  height: 102rpx;
  border-radius: 52rpx;
  flex-direction: row;
  align-items: center;
  background-image: linear-gradient(to bottom, #f54ea2, #ff7676);
}
.discover .icon {
  color: #ffffff;
  font-size: 40rpx;
  margin-left: 52rpx;
}
.discover .input {
  color: #ffffff;
  font-weight: 600;
  margin-left: 20rpx;
  flex: 1;
  margin-right: 52rpx;
}
.label {
  color: #fa608f;
  margin-right: 40rpx;
}


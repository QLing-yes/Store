.card {
  margin-top: 30rpx;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 32rpx;
  background-color: #ffffff;
}
.card > .left {
  border-radius: 32rpx;
  background-color: #eeeff4;
  width: 214rpx;
  height: 214rpx;
  margin: 20rpx;
  content-visibility: auto;
}
.card > .right {
  margin: 20rpx;
  flex: 1;
  height: 214rpx;
  content-visibility: auto;
}
.card > .right > .t1 {
  font-weight: 600;
}
.card > .right > .t2 {
  font-size: 20rpx;
  color: #8a8a8a;
  flex: 1;
}
.card > .right > .item {
  flex-direction: row;
  align-items: center;
}
.card > .right > .item > .t3 {
  font-weight: 600;
  font-size: 30rpx;
  color: #8a8a8a;
  flex: 1;
}
.card > .right > .item > .but {
  width: 164rpx;
  height: 66rpx;
  border-radius: 16rpx;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #eeeff4;
  padding: 20rpx;
}
.card > .right > .item > .but > .ra {
  font-weight: 600;
  background-color: #ffffff;
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
  text-align: center;
  border-radius: 10rpx;
}
.card > .right > .item > .but > .num {
  font-weight: 600;
  font-size: 30rpx;
  margin: 10rpx;
}


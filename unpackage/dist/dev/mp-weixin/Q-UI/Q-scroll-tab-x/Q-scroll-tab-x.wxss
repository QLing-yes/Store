.category {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 90rpx;
  position: relative;
  white-space: nowrap;
}
.category .line {
  width: 50rpx;
  height: 10rpx;
  border-radius: 10rpx;
  background-color: #fa618d;
  bottom: 10rpx;
  position: absolute;
  transition-property: width, left;
  transition-duration: 0.5s;
}

